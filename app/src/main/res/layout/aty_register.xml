<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_gap"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/aty_register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:background="@color/grey_gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"/>

    <EditText
        android:id="@+id/aty_register_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:gravity="center_vertical"
        android:hint="登录帐号(英文)"
        android:textColorHint="@color/colorGray"
        android:inputType="text"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:background="@color/grey_gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"/>

    <EditText
        android:id="@+id/aty_register_pass"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="密码(至少6位)"
        android:textColorHint="@color/colorGray"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:background="@color/grey_gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"/>

    <EditText
        android:id="@+id/aty_register_pass2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="再次输入密码"
        android:textColorHint="@color/colorGray"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:id="@+id/aty_register_contract"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text='注册表示您同意"智居用户协议",请先阅读>>'
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/aty_register_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/aty_register_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_aty_register_btn"
        android:enabled="false"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="20sp" />


</LinearLayout>